#
# Lotr Deck Statistics Script
#

def CountOfType
{
	push(t);
	t=0.0;
	for(c)(ARG[1])
	{
		if(Attr("type",c)==ARG[0])
		t=t+1.0;
	}
	return(t);
	t=pop();
}

